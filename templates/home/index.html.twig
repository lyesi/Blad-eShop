{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="button-center">
    <div class="add-item-button"></div>
</div>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ item.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ item.name }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ item.price }}</td>
        </tr>
        <tr>
            <th>State</th>
            <td>{{ item.state }}</td>
        </tr>
        <tr>
            <th>Localisation</th>
            <td>{{ item.localisation }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ item.description }}</td>
        </tr>
    </tbody>
</table>

<a href="{{ path('item_new') }}">Aoutez un article</a>

{% endblock %}
