{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}

{% if app.user %}
        <div class="already-logged-in">
            Vous êtes déjà connecté sur {{ app.user.username }}, <a style="color: white; font-weight: bold;" href="{{ path('app_logout') }}">se déconnecter</a>
        </div>
{% endif %}

<form class="login-form" method="post">
    {% if error %}
        <div class="login-alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <h1 class="login-title">Connexion</h1>

    
        <input type="email" value="{{ last_username }}" name="email" placeholder="Email" id="inputEmail" class="form-control" required autofocus>
    
        <input type="password" name="password" placeholder="Mot de passe" id="inputPassword" class="form-control" required>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    
        <p class="login-register">Pas encore de compte ? <a href="{{ path('app_register') }}" class="login-register-link">S'inscrire</span></a>
    
        <div class="register-button">
            <button type="submit">
                Se connecter
            </button>
        </div>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html
    

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
</form>
{% endblock %}
